{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/output/${fileBasenameNoExtension}.exe",
                "${file}",
                "-I",
                "C:/Users/owner/AppData/Local/Programs/Python/Python312/Include",
                "-I",
                "C:/Users/owner/AppData/Local/Programs/Python/Python312/Lib/site-packages/pybind11/include",
                "-L",
                "C:/Users/owner/AppData/Local/Programs/Python/Python312/libs",
                "-lpython3.12",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
